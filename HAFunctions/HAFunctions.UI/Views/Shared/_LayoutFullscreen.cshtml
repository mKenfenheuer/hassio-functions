<!DOCTYPE html>
<html lang="en" style="width:100%; height: 100%;">
<head>
    <partial name="_HeaderContent" />
    @RenderSection("Header", required: false)
</head>
<body style="width:100%; height: 100%; margin:0;" class="d-flex flex-column">
    <header class="flex-shrink-0 flex-grow-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-homeassistant border-bottom box-shadow">
            <div class="container-fluid">
                <partial name="_NavbarContent" />
                @RenderSection("Navbar", required: false)
            </div>
        </nav>
    </header>
    <div class="d-flex flex-column flex-shrink-1 flex-grow-1">
        <main role="main" class="flex-grow-1 flex-shrink-1">
            @RenderBody()
        </main>

        <footer class="border-top footer-flex flex-grow-0 flex-shrink-0 text-muted">
            <div class="container">
                Footer!
            </div>
        </footer>
    </div>
    <partial name="_Scripts" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
